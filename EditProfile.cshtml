@model BiteOrderWeb.ViewModels.EditProfileViewModel
@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<h2 class="text-center mb-4">Edit Profile</h2>

<form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="p-4 shadow-sm rounded-lg bg-white">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProfilePicture" />

    <div class="form-group mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Upload New Picture</label>
        <input asp-for="ImageFile" class="form-control" type="file" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
    {
        <div class="form-group mb-3">
            <label class="form-label">Current Picture:</label><br />
            <img src="@Model.ProfilePicture" alt="Profile" class="img-fluid" style="max-height: 150px;" />
        </div>
    }

    <div class="d-flex justify-content-between">
        <!-- Button color changed to a modern orange shade -->
        <button type="submit" class="btn" style="background-color: #ff7f50; color: white;">Save Changes</button>
        <a asp-action="Dashboard" class="btn btn-secondary">← Back</a>
    </div>
</form>
