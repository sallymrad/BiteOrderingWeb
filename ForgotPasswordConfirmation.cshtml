@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box text-center">
        <h2 class="mb-4">Check your email 📩</h2>
        <p>If an account with this email exists, a password reset link has been sent.</p>

        @if (TempData["ResetLink"] != null)
        {
            <div class="mt-3">
                <p class="text-danger fw-bold">Debug Link:</p>
                <a href="@TempData["ResetLink"]" class="btn btn-outline-primary mt-2" target="_blank">
                    Click here to reset password
                </a>
            </div>
        }


        <a asp-controller="Account" asp-action="Login" class="btn custom-login-btn w-100 p-2 mt-4">Back to Login</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
